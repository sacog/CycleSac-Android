<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecordTrip$DummySectionFragment" >

    <TextView
        android:id="@+id/textViewDesc"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/black"
        android:gravity="center_vertical|center_horizontal|center"
        android:text="Please select note type and tap Save"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/listViewNoteType"
        android:layout_width="match_parent"
        android:layout_height="302dp"
        android:layout_above="@+id/textViewNoteTypeDesc"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textViewDesc"
        android:background="@drawable/bg_key" >
    </ListView>

    <TextView
        android:id="@+id/textViewNoteTypeDesc"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@android:color/black"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="Anything about this spot?"
        android:textColor="@android:color/white" />

</RelativeLayout>